<%include ./partials/header%>
<style>
    .loginForm {
        width: 400px;
        border: 1px solid #eaeced;
        padding: 42px 42px 36px;
        margin: 200px auto;
        border-radius: 5px;
    }

    .usernameInput,
    .passwordInput {
        width: 100%;
        margin-bottom: 20px;
        padding: 0 0 0 10px;
        border-radius: 5px;
        border: 1px solid #e1e7eb;
        height: 44px;
        font-size: 14px;
    }

    .login {
        background-color: #0070ba;
        color: #ffffff;
        width: 100%;
        border-radius: 5px;
        height: 44px;
        font-size: 16px;
        border: none;
        padding: 0;
        cursor: pointer;
    }

    .trouble {
        padding: 20px 0;
        margin: 0 auto;
        text-align: center;
    }

    .trouble a {
        color: #0070ba;
        text-decoration: none;
    }

    .signup {
        background-color: #e1e7eb;
        color: #000000;
        width: 100%;
        border-radius: 5px;
        height: 44px;
        font-size: 16px;
        margin-top: 20px;
        border: none;
        cursor: pointer;
    }

    .separator {
        border: 1px solid #e1e7eb;
        border-bottom: 0;
    }
</style>
<div class="loginForm">
    <form action="/login" method="POST">
        <h2 style="text-align: center;">Login</h2>
        <div>
            <input
                type="username"
                id="username"
                name="username"
                placeholder="Username"
                class="usernameInput"
                required
            />
        </div>
        <div>
            <input
                type="password"
                id="password"
                name="password"
                placeholder="Password"
                class="passwordInput"
                required
            />
        </div>
        <button type="submit" class="login">Log In</button>
    </form>
    <p class="trouble">
        <a href="/forgot" class="">Having trouble logging in?</a>
    </p>
    <hr class="separator" />
    <button
        type="button"
        onclick="window.location.href = '/register'"
        class="signup"
    >
        Signup
    </button>
</div>
<%include ./partials/footer%>
